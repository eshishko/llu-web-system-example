{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ article.title }}</h1>

    <div>
        <p>{{ article.content }}</p>
    </div>

    <div>
        TAGS:
        {% for tag in article.tags %}
            {{ tag.name }}{% if not loop.last %},{% endif %}
        {% endfor %}
    </div>
    <time>{{ article.createdAt|date('d-m-Y H:i') }}</time>
{% endblock %}